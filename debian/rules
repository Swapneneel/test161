#!/usr/bin/make -f
# -*- makefile -*-

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

export BUILDDIR=$(CURDIR)/.build
export GOPATH=$(BUILDDIR)/gopath
export GOROOT=$(BUILDDIR)/go
PKGDIR=debian/test161

%:
	dh $@ 

clean:
	dh_clean
	rm -rf $(BUILDDIR)

binary-arch: clean
	dh_prep
	dh_installdirs
	if [ ! -d $(BUILDDIR) ]; then mkdir $(BUILDDIR); fi
	if [ ! -d $(GOPATH) ]; then mkdir $(GOPATH); fi
	if [ ! -f $(BUILDDIR)/go1.5.3.linux-amd64.tar.gz ]; then cd $(BUILDDIR) && wget https://storage.googleapis.com/golang/go1.5.3.linux-amd64.tar.gz; fi
	if [ ! -d $(BUILDDIR)/go ]; then cd $(BUILDDIR) && tar xf go1.5.3.linux-amd64.tar.gz; fi
	mkdir -p $(GOPATH)/src/github.com/ops-class/
	ln -s $(CURDIR) $(GOPATH)/src/github.com/ops-class/test161
	cd $(GOPATH)/src/github.com/ops-class/test161 && $(GOROOT)/bin/go get && $(GOROOT)/bin/go install
	mkdir -p $(PKGDIR)/usr/bin
	cp $(GOPATH)/bin/* $(PKGDIR)/usr/bin/
	dh_strip
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-arch
